def ChooseWord():
  word = ("balloon")
  return word
  return ChooseWord()

wrong_guesses = 0
blank_list = [ ]

for num in range(7):
  blank_list.append("_")
print(blank_list)
print ("This is a game of hangman.")

while wrong_guesses < 6:
  guess = input("Enter a letter.")
  guess = guess.lower()
  if guess not in ChooseWord():
    wrong_guesses = wrong_guesses + 1
    print(guess,"is NOT part of the secret word.")
  if guess in ChooseWord():
    print (guess, "is part of the word! Good job!")
    indices = [i for i, letter in enumerate(ChooseWord()) if letter == guess]
    for index in indices:
      blank_list[index] = guess 
    print(blank_list)
  if wrong_guesses == 1:
    print("head")
  if wrong_guesses == 2:
    print ("body")
  if wrong_guesses == 3:
    print("right arm")
  if wrong_guesses == 4:
    print("left arm")
  if wrong_guesses == 5:
    print("right leg")
  if wrong_guesses == 6:
    print("left leg! game over!")
