1)
def hasVowels(word):
  if "a" in word:
    return True
  if "e" in word:
    return True
  if "i" in word:
    return True
  if "o" in word:
    return True
  if "u" in word:
    return True
  else:
    return False
 
 2)
 def hasVowels(word):
  if "a" in word:
    return True
  if "e" in word:
    return True
  if "i" in word:
    return True
  if "o" in word:
    return True
  if "u" in word:
    return True
  else:
    return False
    

word = input("give me a word with vowels in it, please")
if hasVowels(word):
  print("well")
while not hasVowels(word):
  word = input("try again?")
  
3)
def countVowels (str):
  count = 0 
  vowel = set("aeiou")
  for alphabet in str:
    if alphabet in vowel:
      count = count + 1
      
  print ("the number of vowels you entered is equal to", count)
  
4)
list = []

word = input("name a word, any word! (or stop to quit)")
word = word.lower()
list.append(word)
while word != "stop":
  word = input("name another word")
  word = word.lower()
  list.append(word)
list.remove("stop")
print(list)

5)
list = []

word = input("name a word, any word! (or stop to quit)")
word = word.lower()
list.append(word)
while word != "stop":
  word = input("name another word")
  word = word.lower()
  list.append(word)
list.remove("stop")
print(list)

def countVowels (str):
  count = 0 
  vowel = set("aeiou")
  for alphabet in str:
    if alphabet in vowel:
      count = count + 1
      
  print ("the number of vowels you entered is equal to", count)
  
for word in list:
  vowelNum = countVowels(word)

print(vowelNum)
